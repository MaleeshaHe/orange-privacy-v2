# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=orangeprivacy
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Encryption for OAuth Tokens
# IMPORTANT: Must be at least 32 characters and different from JWT_SECRET
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here_change_in_production_min_32_chars
ENCRYPTION_SALT=orangeprivacy-unique-salt-change-in-production

# AWS Configuration (EU Region)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=orangeprivacy-uploads
AWS_REKOGNITION_COLLECTION_ID=orangeprivacy-faces

# Redis Configuration (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Social Media OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_CALLBACK_URL=http://localhost:5000/api/auth/instagram/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Scan Configuration
DEFAULT_CONFIDENCE_THRESHOLD=80
MAX_REFERENCE_PHOTOS=3
MIN_IMAGE_WIDTH=640
MIN_IMAGE_HEIGHT=480

# Logging
LOG_RETENTION_DAYS=30
